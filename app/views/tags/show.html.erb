<p id='notice'><%= notice %></p>

<h1><%= @tag.name %></h1>

<% unless @tag.tasks.empty? %>

  <h2>Tasks</h2>

  <ul>
    <% @tag.tasks.each do |task| %>
      <li><%= link_to task.description, task %></li>
    <% end %>
  </ul>

<% end %>

<% if logged_in? %>
  <%= link_to 'Destroy', @tag, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
