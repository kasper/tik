<% title 'Tag' %>

<h1><%= @tag.name %></h1>

<% unless @tag.tasks.empty? %>

  <h2>Tasks for tag <span class='detail'><%= @tag.tasks.count %></span></h2>

  <ul>
    <% @tag.tasks.each do |task| %>
      <li><%= link_to task.description, task %></li>
    <% end %>
  </ul>

<% end %>

<%= link_to 'Destroy', @tag, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' if logged_in? %>
