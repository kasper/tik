<% title 'Teams' %>

<table class='table'>

  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<%= link_to 'New Team', new_team_path, :class => 'btn btn-default' if logged_in? %>
