<% if @team.errors.any? %>

  <div class='alert alert-danger'>
    <%= @team.errors.full_messages.join('. ') %>.
  </div>

<% end %>

<%= form_for(@team) do |f| %>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <%= f.submit :class => 'btn btn-default' %>

<% end %>
