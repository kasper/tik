<p id='notice'><%= notice %></p>

<h1><%= @team.name %> team</h1>

<% unless @team.users.empty? %>

  <h2>Users</h2>

  <ul>
    <% @team.users.each do |user| %>
      <li><%= link_to user.username, user %></li>
    <% end %>
  </ul>

<% end %>

<% if logged_in? %><%= link_to 'Edit', edit_team_path(@team) %><br><% end %>
<%= link_to 'Destroy', @team, method: :delete, data: { confirm: 'Are you sure?' } if logged_in? and current_user.admin? %>
