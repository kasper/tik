<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Team</th>
      <% if logged_in? %><th></th><% end %>
      <% if logged_in? and current_user.admin? %><th></th><% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.team.name %></td>
        <% if logged_in? and (currently_logged_in?(user) or current_user.admin?) %><td><%= link_to 'Edit profile', edit_user_path(user) %></td><% end %>
        <% if logged_in? and current_user.admin? %><td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

