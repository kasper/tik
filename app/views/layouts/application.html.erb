<!DOCTYPE html>
<html lang='en'>
<head>
  <meta charset='UTF-8'>
  <title>Tik — <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='container'>

  <div class='row'>

    <div class='btn-group pull-right'>

      <% if logged_in? %>
        <%= link_to current_user.username, current_user, :class => 'btn btn-default' %>
      <% else %>
        <%= link_to 'Log In', login_path, :class => 'btn btn-default' %>
      <% end %>

      <button type='button' class='btn btn-default dropdown-toggle' data-toggle='dropdown'>
        <span class='caret'></span>
        <span class='sr-only'>Toggle Dropdown</span>
      </button>

      <ul class='dropdown-menu' role='menu'>
        <% unless logged_in? %><li><%= link_to 'Sign Up', signup_path %></li><% end %>
        <% if logged_in? %><li><%= link_to 'Log Out', logout_path, :method => :delete %></li><% end %>
      </ul>

    </div>

  </div>

  <div class='row'>

    <div id='main-panel' class='panel panel-primary'>

      <div class='panel-heading'>

        <div class='btn-group'>

          <h3 class='panel-title' data-toggle='dropdown'>Tik — <%= yield(:title) %> <span class='caret'></span></h3>

          <ul class='dropdown-menu' role='menu'>
            <li><%= link_to 'Tasks', :root %></li>
            <li><%= link_to 'Tags', tags_path %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li><%= link_to 'Teams', teams_path %></li>
          </ul>

        </div>

      </div>

      <div class='panel-body'>

        <%= yield %>

      </div>

    </div>

  </div>

</div>

</body>
</html>
